
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/ViewModels/QuestListViewModel.js"></script>

<br/>

<div class="panel panel-primary">
    <div class="panel-heading">Quests</div>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Id</td>
            <td>ParentId</td>
            <td>CurrentState</td>
            <td>Title</td>
            <td>Description</td>
            <td>Start date</td>
            <td>Deadline</td>
            <td>IsImportant</td>
        </tr>
        </thead>
        <tbody data-bind="foreach: QuestList">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: ParentId"></td>
            <td data-bind="text: $root.FormCurrentState($data.CurrentState)"></td>
            <td data-bind="text: Title"></td>
            <td data-bind="text: Description"></td>
            <td data-bind="text: StartDate"></td>
            <td data-bind="text: Deadline"></td>
            <td data-bind="text: IsImportant"></td>
            <td><input class="btn btn-danger" type="button" value="Delete" data-bind="click: $parent.DeleteQuest"/></td>
        </tr>
        </tbody>
    </table>
</div>

<input class="btn btn-primary" type="button" value="Refresh" data-bind="click: GetQuestList" />


